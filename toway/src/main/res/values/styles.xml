<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--颜色-->
        <item name="android:textSize">18sp</item> <!--字体大小-->
        <item name="colorControlNormal">@color/white</item> <!-- 溢出菜单图标颜色-->
    </style>
</resources>
