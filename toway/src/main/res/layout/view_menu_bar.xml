<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp4"
    android:paddingTop="@dimen/dp4">

    <LinearLayout
        android:id="@+id/ll_menu_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_menu_activity"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp25"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_menu_activity"
                android:layout_width="@dimen/dp24"
                android:layout_height="@dimen/dp20"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/ic_activity_press"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_menu_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="center"
            android:text="活动"
            android:textColor="@color/c_app_theme"
            android:textSize="@dimen/sp10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_menu_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_menu_my"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp25"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_menu_my"
                android:layout_width="@dimen/dp24"
                android:layout_height="@dimen/dp20"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/ic_my_normal"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_menu_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp10" />
    </LinearLayout>
</LinearLayout>